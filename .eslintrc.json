{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "arrow-body-style": [2, "as-needed"],
        "no-unused-vars": ["error", { "varsIgnorePattern": "CSS"}],
        "import/prefer-default-export": "off",
        "react/prop-types": "off"
    },
    "env": {
        "browser": true,
        "mocha": true
    }
}